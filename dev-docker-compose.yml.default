# Configuration for local development
#
# See README for setup and usage instructions
#
version: '3'

services:
  postgres:
    image: postgres
    ports:
      - "5433:5433"
      - "5432:5432"
    volumes:
      - "../db:/db"
      - "../backup:/backup"
      - ".:/project"
    environment:
      POSTGRES_PASSWORD: nsc
      POSTGRES_USER: nsc
      PGDATA: /db

  redis:
    image: redis
    ports:
      - "6379:6379"

  frontend:
    build:
      context: ./
      dockerfile: "./containers/frontend/Dockerfile"
    environment:
    - FRONTEND_MODE=watch
    ports:
      - "8080:8080"
    volumes:
      - ".:/project"

  django:
    build:
      context: ./
      dockerfile: "./containers/django/Dockerfile"
    environment:
      DJANGO_CONFIGURATION: Dev
      DATABASE_HOST: postgres
      REDIS_SERVICE_HOST: redis
      WEBPACK_DEV_HOST: static
      WEBPACK_DEV_URL: http://{host}:8080/
    ports:
      - "8000:8000"
    volumes:
      - ".:/project"
    depends_on:
      - postgres
      - redis
